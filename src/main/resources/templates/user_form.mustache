{{#layout}}
  {{#content}}
    <form method="post" action="{{action}}">
      <label>ID</label>
      <input name="id" value="{{user.id}}" {{#editing}}readonly{{/editing}} required/>

      <label>Nombre</label>
      <input name="name" value="{{user.name}}" required/>

      <label>Email</label>
      <input name="email" value="{{user.email}}" required/>

      <button type="submit">{{btnText}}</button>
      <a href="/">Cancelar</a>
    </form>
  {{/content}}
{{/layout}}
